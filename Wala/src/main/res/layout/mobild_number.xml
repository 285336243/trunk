<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/register_mobile_number_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/corner_edit"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/hintcolor"
            android:inputType="number"
            android:drawableLeft="@drawable/icon_tellarea_tomato"
            android:drawablePadding="8dp"
            android:paddingLeft="6dp"
            android:textColorHighlight="@color/white_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/register_mobile_number_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/white_grey"
            android:textSize="16sp" />

        <Button
            android:id="@+id/register_mobile_number_next"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/corner_button"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>