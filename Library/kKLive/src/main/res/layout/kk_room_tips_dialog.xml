<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="274dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/kk_room_mem_menu_bg"
        android:orientation="vertical"
        android:paddingLeft="18dip"
        android:paddingRight="18dip" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="title"
            android:textColor="@color/kk_text_pink"
            android:textSize="@dimen/kk_title_text" />

<!--         <TextView -->
<!--             android:layout_width="match_parent" -->
<!--             android:layout_height="0.3dip" -->
<!--             android:background="@color/kk_app_color_dark_gray" /> -->

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:paddingTop="8dip"
            android:text="msg"
            android:textColor="@color/kk_text_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dip"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dip" >

            <Button
                android:id="@+id/next_btn"
                android:layout_width="100dip"
                android:layout_height="39dip"
                android:background="@drawable/kk_sign_in_sure_btn"
                android:textColor="@color/kk_text_white"
                android:textSize="@dimen/kk_text_big_size" />

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="100dip"
                android:layout_height="39dip"
                android:visibility="gone"
                android:background="@drawable/kk_room_add_flag_cancel"
                android:textColor="@color/kk_text_gray"
                android:layout_marginLeft="30dip"
                android:textSize="@dimen/kk_text_big_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>