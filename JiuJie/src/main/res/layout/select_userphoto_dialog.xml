<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/from_take_picture"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:drawableLeft="@drawable/icon_camera_choice"
        android:drawablePadding="24dip"
        android:gravity="center_vertical"
        android:paddingLeft="24dip"
        android:text="@string/take_picture"
        android:textColor="@color/light_grey"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ligth_grey_8d" />

    <TextView
        android:id="@+id/from_photo_album"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:drawableLeft="@drawable/icon_photo_choice"
        android:drawablePadding="24dip"
        android:gravity="center_vertical"
        android:paddingLeft="24dip"
        android:text="@string/photo_album"
        android:textColor="@color/light_grey"
        android:textSize="16sp" />

</LinearLayout>