<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jiujie8.choice.myjiujie.CustomViewPager
        android:id="@+id/home_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/home_tool_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@drawable/home_action_bg">

        <ImageButton
            android:id="@+id/home_collet"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_collecting_choice"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@color/transparent"/>

        <ImageButton
            android:id="@+id/home_comment"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_comment_choice"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@color/transparent"/>

        <ImageButton
            android:id="@+id/home_vote"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_vote_choice"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@color/transparent"/>

        <ImageButton
            android:id="@+id/home_share"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_share_choice"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@color/transparent"/>

        <ImageButton
            android:id="@+id/home_more"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_more_choice"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@color/transparent"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/home_list_publish_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:visibility="gone"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/btn_edit_choice"/>
</LinearLayout>

