<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/submit_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/shipp_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/shipping_tips"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="@color/hintcolor"
                    android:hint="@string/xingming"
                    android:textColorHint="@color/hintcolor"
                    android:background="@drawable/corner_edit"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/user_telphone"
                    android:layout_width="match_parent"
                    android:background="@drawable/corner_edit"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:textSize="16sp"
                    android:maxLength="11"
                    android:textColor="@color/hintcolor"
                    android:hint="@string/dianhua"
                    android:textColorHint="@color/hintcolor"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/user_address"
                    android:layout_width="match_parent"
                    android:background="@drawable/corner_edit"
                    android:paddingLeft="6dp"
                    android:textSize="16sp"
                    android:textColor="@color/hintcolor"
                    android:hint="@string/dizhiu"
                    android:textColorHint="@color/hintcolor"
                    android:layout_height="120dp"
                    android:gravity="left"
                    android:layout_marginTop="12dp" />

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/corner_button"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="24dp" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/btn_closepop_tomato"
        android:scaleType="centerInside"
        android:layout_gravity="right" />
</FrameLayout>
