<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="274dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/kk_room_mem_menu_bg"
        android:orientation="vertical"
        android:paddingLeft="18dip"
        android:paddingRight="18dip" >

        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/delete_account_info_title"
            android:textColor="@color/kk_text_pink"
            android:textSize="@dimen/kk_title_text" />

        <TextView
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="0.3dip"
            android:background="@color/kk_app_color_dark_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:paddingTop="8dip"
            android:text="@string/delete_account_info"
            android:textColor="@color/kk_text_gray" />

        <RelativeLayout
            android:id="@+id/register_view"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_marginTop="10dip"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/register_gift1"
                android:layout_width="86dip"
                android:layout_height="fill_parent"
                android:background="@drawable/kk_v1_bg"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/register_gift1"
                android:background="@drawable/kk_first_fill_item_bg"
                android:paddingLeft="9dip" >

                <TextView
                    android:id="@+id/register_gift1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="15dip" />
            </RelativeLayout>
        </RelativeLayout>

 

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dip"
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/dialog_button_ok"
                android:layout_width="100dip"
                android:layout_height="39dip"
                android:background="@drawable/kk_sign_in_sure_btn"
                android:textColor="@color/kk_background_white"
                android:textSize="@dimen/kk_text_big_size" 
                android:text="@string/delete_account_btn"/>

            <Button
                android:id="@+id/dialog_button_cancel"
                android:layout_width="100dip"
                android:layout_height="39dip"
                android:layout_marginLeft="30dip"
                android:background="@drawable/kk_room_add_flag_cancel"
                android:textColor="@color/kk_text_gray"
                android:textSize="@dimen/kk_text_big_size"
                android:text="@string/kk_cancel" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
