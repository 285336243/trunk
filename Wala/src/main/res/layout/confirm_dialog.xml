<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/bdg_pop_tomato"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <TextView
            android:id="@+id/message_show_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:textSize="16sp"
            android:textColor="#9D968D"
            android:gravity="center"
            android:text="@string/cancel_tip"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDE9E3"/>
        <TextView
            android:id="@+id/confirm_textview"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="16sp"
            android:textColor="#9D968D"
            android:gravity="center"
            android:text="@string/confirm_tip"/>

    </LinearLayout>
</FrameLayout>