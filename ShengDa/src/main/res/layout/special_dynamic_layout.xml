<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/login_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:paddingBottom="@dimen/title_padding"
        android:paddingTop="@dimen/title_padding"
        android:background="@drawable/bdg_titbar_sd">

        <ImageView
            android:id="@+id/back_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:background="@drawable/icon_return"
            android:contentDescription="@string/back_icon" />


        <Button
            android:id="@+id/publish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dip"
            android:background="@color/transparent"
            android:text="@string/special_publish_title"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/placed_imageView1"
            android:layout_width="88dp"
            android:layout_height="93dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"/>
        <EditText
            android:id="@+id/publish_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="@null"
            android:hint="@string/saysome"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:scrollbars="vertical"
            android:maxLines="1000"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:minHeight="120dp"/>
        </LinearLayout>


</LinearLayout>