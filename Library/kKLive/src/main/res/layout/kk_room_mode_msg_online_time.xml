<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="3dip" >

    <TextView
        android:id="@+id/time_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dip"
        android:background="@drawable/kk_chat_msg_time_tag_bg"
        android:gravity="center"
        android:text="00:00"
        android:textColor="#ffffff"
        android:textSize="8sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="38dip"
        android:layout_height="38dip"
        android:layout_below="@+id/time_tag"
        android:layout_marginTop="7dip"
        android:padding="2dip" />

    <TextView
        android:id="@+id/online_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/kk_room_chat_online_msg_icon"
        android:layout_marginLeft="26dip"
        android:layout_toRightOf="@+id/img"
        android:layout_alignTop="@+id/img"
        android:layout_marginTop="10dip"
        android:background="@drawable/kk_chat_msg_time_tag_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingTop="1dip"
        android:paddingBottom="1dip"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:text=" 主播直播了1分20秒" />

    <TextView
        android:id="@+id/last_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dip"
        android:background="@drawable/kk_chat_msg_time_tag_bg"
        android:gravity="center_vertical"
        android:paddingBottom="2dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="2dip"
        android:text="@string/kk_room_chat_last_view_tag"
        android:textColor="#ffffff"
        android:textSize="11sp" />
    
</RelativeLayout>