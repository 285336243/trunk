<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="274dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/kk_room_mem_menu_bg"
        android:orientation="vertical"
        android:paddingLeft="18dip"
        android:paddingRight="18dip" >
        
    	<include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/kk_sex_select_view" 
        android:layout_marginTop="18dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dip"
            android:layout_marginTop="18dip"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/next_btn"
                android:layout_width="100dip"
                android:layout_height="39dip"
                android:background="@drawable/kk_sign_in_sure_btn"
                android:textColor="@color/kk_text_white"
                android:textSize="@dimen/kk_text_big_size" 
                android:text="@string/kk_ok"/>

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="100dip"
                android:layout_height="39dip"
                android:layout_marginLeft="30dip"
                android:background="@drawable/kk_room_add_flag_cancel"
                android:textColor="@color/kk_text_gray"
                android:textSize="@dimen/kk_text_big_size"
                android:text="@string/kk_cancel" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
