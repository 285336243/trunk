<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/transparent"
    android:id="@+id/feed_submit_root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EAE5E1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/feed_submit_edit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="#6F6A64"
                android:drawableLeft="@drawable/transparent"
                android:drawablePadding="4dp"
                android:background="@drawable/inp_sendmsg_tomato"/>

            <TextView
                android:id="@+id/feed_submit_text"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textColor="@color/red"
                android:gravity="center"
                android:text="@string/send"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>