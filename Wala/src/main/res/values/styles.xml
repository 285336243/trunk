<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Wala" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/Widget.Styled.ActionBar</item>
        <item name="android:windowBackground">@color/window_color</item>
        <item name="android:actionBarSize" tools:ignore="NewApi">48dp</item>
        <item name="android:actionMenuTextAppearance" tools:ignore="NewApi">@style/MenuTextStyle</item>
        <item name="android:selectableItemBackground" tools:ignore="NewApi">@drawable/transparent</item>
        <item name="homeAsUpIndicator">@drawable/home_as_up_indicator</item>
        <item name="android:homeAsUpIndicator" tools:ignore="NewApi">@drawable/home_as_up_indicator</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor" tools:ignore="NewApi">@color/white</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@color/tab_background</item>
        <item name="android:background">@color/tab_background</item>
        <item name="indeterminateProgressStyle">@style/IndeterminateProgress</item>
        <item name="android:indeterminateProgressStyle" tools:ignore="NewApi">@style/IndeterminateProgress</item>
        <item name="android:titleTextStyle" tools:ignore="NewApi">@style/Widget.Styled.TitleTextStyle</item>
        <item name="titleTextStyle">@style/Widget.Styled.TitleTextStyle</item>
        <item name="android:subtitleTextStyle" tools:ignore="NewApi">@style/Widget.Styled.SubTitleStyle</item>
    </style>

    <style name="Widget.Styled.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/abs__action_bar_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Styled.SubTitleStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/abs__action_bar_subtitle_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IndeterminateProgress" parent="Widget.Sherlock.Light.ProgressBar">
        <item name="android:minWidth">16dp</item>
        <!--<item name="android:indeterminateDrawable">@color/transparent</item>-->
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Global">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TabIcon" parent="TextIcon">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:layout_height">26dp</item>
    </style>

    <style name="TabText" parent="Global">
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ListSubtitleText" parent="SubtitleText" />

    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="ListView">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ListSpinner" parent="Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LineView">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="TextffView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>

    </style>
    <style name="ArrowView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/icon_nextarrow_tomato</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="HaLineView">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divi_color</item>
    </style>
    <style name="TextGongffView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pername_color</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:layout_centerVertical">true</item>

    </style>
    <style name="TextEdit">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/edit_color</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:layout_centerVertical">true</item>

    </style>
    <style name="TextSetting">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pername_color</item>
        <item name="android:layout_centerVertical">true</item>

    </style>

    <style name="LargePic">
        <item name="android:windowBackground">@color/transparent_95</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
