<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="16dp">

    <FrameLayout
        android:id="@+id/search_item_avatar_layout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/headpic" />

        <ImageView
            android:id="@+id/search_item_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/feb_topicuserhead_tomato" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/search_item_nickname_and_badge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/search_item_avatar_layout">

        <TextView
            android:id="@+id/search_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="160dp"
            android:textColor="@color/light_grey"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/search_item_badge_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/search_item_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/search_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_item_nickname_and_badge"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/search_item_avatar_layout"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#aeaeae"
        android:textSize="14sp" />
</RelativeLayout>