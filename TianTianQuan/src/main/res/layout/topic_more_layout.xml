<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/search_tab_selector_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <Button
                android:id="@+id/topic_more_report_content"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="32dip"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:text="@string/topic_report_content"
                android:background="@drawable/bdg_btnlogout_tj" />

            <Button
                android:id="@+id/topic_more_cancel"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="32dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dp"
                android:background="@drawable/bdg_btnpop_tj"
                android:text="@string/cancel"
                android:textColor="@color/search_tab_color"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>