<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip"
        android:background="@drawable/bdg_tvq_small_tj" >

        <FrameLayout
            android:id="@+id/search_circle_list_item_progress_layout"
            android:layout_width="135dip"
            android:layout_height="87dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="4dip"
            android:layout_marginTop="4dip"
            android:paddingBottom="4dip" >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/search_circle_list_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/search_circle_list_item_layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:layout_marginTop="4dip"
            android:layout_toRightOf="@id/search_circle_list_item_progress_layout"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/search_circle_list_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_qofficer_tj" />

            <TextView
                android:id="@+id/search_circle_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:textColor="@color/tvcircle_grid_item_text_color"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_circle_list_item_layout_title"
            android:layout_marginBottom="4dip"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="4dip"
            android:layout_toRightOf="@id/search_circle_list_item_progress_layout"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_qpopu_tj" />

            <TextView
                android:id="@+id/search_circle_list_item_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:textColor="@color/rvcircle_grid_item_number_text_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:background="@drawable/icon_qtopic_tj" />

            <TextView
                android:id="@+id/search_circle_list_item_topics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:textColor="@color/rvcircle_grid_item_number_text_color"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>