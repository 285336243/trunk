<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bdg_msgpop_tj"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_message_dialog_reply"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="14sp"
            android:textColor="@color/tvcircle_grid_item_text_color"
            android:paddingLeft="16dp"
            android:gravity="center_vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_divider_top" />

        <TextView
            android:id="@+id/tv_message_dialog_topic_detail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="14sp"
            android:textColor="@color/tvcircle_grid_item_text_color"
            android:text="@string/message_dialog_reply"
            android:paddingLeft="16dp"
            android:gravity="center_vertical" />

    </LinearLayout>
</RelativeLayout>