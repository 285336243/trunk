<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HAbsListView">
        <attr name="drawSelectorOnTop" format="reference|boolean"></attr>
        <attr name="listSelector" format="reference"></attr>
        <attr name="scrollingCache" format="reference|boolean"></attr>
        <attr name="textFilterEnabled" format="reference|boolean"></attr>
        <attr name="cacheColorHint" format="reference|color"></attr>
        <attr name="fastScrollEnabled" format="reference|boolean"></attr>
        <attr name="smoothScrollbar" format="reference|boolean"></attr>
    </declare-styleable>
    <!-- corresponding to android GridView -->
    <declare-styleable name="HorizontalGridView">
        <attr name="horizontalSpacing" format="reference|integer"></attr>
        <attr name="verticalSpacing" format="reference|integer"></attr>
        <attr name="stretchMode" format="reference|integer"></attr>
        <attr name="rowHeight" format="reference|integer"></attr>
        <attr name="numRows" format="reference|integer"></attr>
        <attr name="gravity" format="reference|boolean"></attr>
    </declare-styleable>
    <!-- corresponding to android ListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="entries" format="reference"></attr>
        <attr name="divider" />
        <attr name="dividerWidth" format="dimension|integer"></attr>
        <attr name="choiceMode" format="reference|integer"></attr>
        <attr name="footerDividersEnabled" format="reference|boolean"></attr>
        <attr name="headerDividersEnabled" format="reference|boolean"></attr>
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer"/>
        <attr name="animDuration" format="integer"/>
        <attr name="animAlphaStart" format="float"/>
        <attr name="expandDrawable" format="reference"/>
        <attr name="collapseDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MarqueeView">
        <attr name="speed" format="integer"/>
        <attr name="pause" format="integer"/>
        <attr name="autoStart" format="boolean"/>
    </declare-styleable>
</resources>