<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_shop_item_root">

    <ImageView
        android:id="@+id/home_shop_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/shop_tomato" />

    <TextView
        android:id="@+id/home_shop_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#FF4830"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="right"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/home_shop_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:shadowColor="#60000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:background="@drawable/home_item_title_background" />

</FrameLayout>