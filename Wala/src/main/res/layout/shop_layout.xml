<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.socialtv.shop.PullToRefreshHeadGridViewGong xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shopphoto_list_grid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:numColumns="2"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="12dp"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrShowIndicator="false"
        ptr:ptrHeaderBackground="@color/transparent"
        ptr:ptrHeaderTextColor="@color/white_grey"
        ptr:ptrDrawable="@drawable/default_ptr_flip"
        android:layout_marginBottom="12dp"/>

    <ProgressBar
        android:id="@+id/pb_loading"
        style="@style/ListSpinner"
        android:layout_centerInParent="true" />
</RelativeLayout>