<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> 
   <item android:id="@android:id/background">   
    <shape>   
        <corners android:radius="3dip" />   
        <gradient android:startColor="@color/kk_background_gray"   
                android:centerColor="@color/kk_background_gray"
                android:centerY="0.75"   
                android:endColor="@color/kk_background_gray"
                android:angle="270"   
        />   
    </shape>   
</item>   
<item android:id="@android:id/secondaryProgress">   
    <clip>   
        <shape>   
            <corners android:radius="3dip" />   
            <gradient android:startColor="@color/kk_pink"
                    android:centerColor="@color/kk_pink"
                    android:centerY="0.75"   
                    android:endColor="@color/kk_pink"
                    android:angle="270"   
            />   
        </shape>   
    </clip>   
</item>   
<item android:id="@android:id/progress"   
>   
    <clip>   
        <shape>   
            <corners android:radius="3dip" />   
            <gradient android:startColor="@color/kk_pink_color"
                android:endColor="@color/kk_pink_color"
                android:angle="270" />   
        </shape>   
    </clip>   
</item> 
</layer-list>