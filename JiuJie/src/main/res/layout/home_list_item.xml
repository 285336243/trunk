<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <FrameLayout
        android:id="@+id/home_list_item_avatar_layout"
        android:layout_width="48dp"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/home_list_item_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/feb_userhead_choice" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/home_list_item_nickname_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/home_list_item_avatar_layout">

        <TextView
            android:id="@+id/home_list_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="10"
            android:textColor="@color/light_grey"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/home_list_item_tag_image"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/home_list_item_crown"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/home_list_item_nickname_layout"
        android:background="@drawable/icon_crown_choice"
        android:visibility="gone" />

    <TextView
        android:id="@+id/home_list_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_list_item_nickname_layout"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/home_list_item_avatar_layout"
        android:textColor="@color/light_grey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/home_list_item_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_list_item_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/home_list_item_avatar_layout"
        android:textColor="@color/grey"
        android:textSize="12sp" />

</RelativeLayout>