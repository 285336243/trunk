<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/publish_choice_or_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/publish_choice_or_left_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/publish_choice_or_left_bkg_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/ligth_grey_8d" />

                <ImageView
                    android:id="@+id/publish_choice_or_left_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/publish_choice_or_left_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/transparent"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/icon_leftarrowbtn_choice" />

                <ImageButton
                    android:id="@+id/publish_choice_or_left_delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_deleimg_choice"
                    android:layout_gravity="right"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/transparent"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/publish_choice_left_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:src="@drawable/btn_selectimg_chioce" />

                    <ImageButton
                        android:id="@+id/publish_choice_left_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:background="@color/transparent"
                        android:src="@drawable/btn_selectcamera_choice" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/publish_choice_or_right_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/publish_choice_or_right_bkg_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white_6E" />

                <ImageView
                    android:id="@+id/publish_choice_or_right_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/publish_choice_or_right_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/transparent"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/icon_rightarrowbtn_choice" />

                <ImageButton
                    android:id="@+id/publish_choice_or_right_delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_deleimg_choice"
                    android:layout_gravity="right"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/transparent"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/publish_choice_right_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:src="@drawable/btn_selectimg_chioce"
                        android:visibility="gone"/>

                    <ImageButton
                        android:id="@+id/publish_choice_right_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:background="@color/transparent"
                        android:src="@drawable/btn_selectcamera_choice"
                        android:visibility="gone"/>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/icon_or_choice" />
    </FrameLayout>

    <EditText
        android:id="@+id/publish_choice_or_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:background="@color/transparent"
        android:textColorHint="#A5A5A5"
        android:textSize="14sp"
        android:padding="12dp"
        android:textColor="@color/light_grey"
        android:hint="@string/publish_choice_tip"/>
</LinearLayout>