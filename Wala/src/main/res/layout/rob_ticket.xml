<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bdg_qp_mzs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/light_box_mzs" />

            <LinearLayout
                android:id="@+id/rob_ticket_key_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="52dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bdg_toptool_mzs"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/icon_notice_mzs" />

                    <com.socialtv.mzs.ScrollTextView
                        android:id="@+id/rob_ticket_marquee_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/bdg_toptool_mzs">

                    <ImageView
                        android:id="@+id/rob_ticket_key_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:id="@+id/rob_ticket_key_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/rob_ticket_key_image"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/rob_ticket_add_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_addkey_mzs" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/rob_ticket_box_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rob_ticket_key_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/bdg_box_mzs" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rob_ticket_box_image"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rob_ticket_tools_layout_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bdg_prop_mzs"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rob_ticket_tools_image_layout_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:layout_marginTop="16dp">

                            <ImageView
                                android:id="@+id/rob_ticket_tools_image_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:id="@+id/rob_ticket_tools_count_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_toRightOf="@id/rob_ticket_tools_image_1"
                                android:textColor="#FFD134"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/rob_ticket_tools_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rob_ticket_tools_image_layout_1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/rob_ticket_buy_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/rob_ticket_tools_title_1"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/rob_ticket_buy_bg"
                            android:paddingBottom="8dp"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:paddingTop="8dp"
                            android:text="@string/buy"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <CheckBox
                        android:id="@+id/rob_ticket_check_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rob_ricket_check_bdg"
                        android:clickable="false"
                        android:button="@null" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rob_ticket_tools_layout_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bdg_prop_mzs"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rob_ticket_tools_image_layout_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:layout_marginTop="16dp">

                            <ImageView
                                android:id="@+id/rob_ticket_tools_image_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:id="@+id/rob_ticket_tools_count_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_toRightOf="@id/rob_ticket_tools_image_2"
                                android:textColor="#FFD134"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/rob_ticket_tools_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rob_ticket_tools_image_layout_2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/rob_ticket_buy_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/rob_ticket_tools_title_2"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/rob_ticket_buy_bg"
                            android:paddingBottom="8dp"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:paddingTop="8dp"
                            android:text="@string/buy"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <CheckBox
                        android:id="@+id/rob_ticket_check_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rob_ricket_check_bdg"
                        android:clickable="false"
                        android:button="@null" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rob_ticket_tools_layout_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bdg_prop_mzs"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rob_ticket_tools_image_layout_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:layout_marginTop="16dp">

                            <ImageView
                                android:id="@+id/rob_ticket_tools_image_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:id="@+id/rob_ticket_tools_count_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_toRightOf="@id/rob_ticket_tools_image_3"
                                android:textColor="#FFD134"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/rob_ticket_tools_title_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rob_ticket_tools_image_layout_3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/rob_ticket_buy_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/rob_ticket_tools_title_3"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/rob_ticket_buy_bg"
                            android:paddingBottom="8dp"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:paddingTop="8dp"
                            android:text="@string/buy"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <CheckBox
                        android:id="@+id/rob_ticket_check_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rob_ricket_check_bdg"
                        android:clickable="false"
                        android:button="@null" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/rob_ticket_immediate_open"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rob_ticket_immediate_open"
            android:gravity="center"
            android:text="@string/immediate_open"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>

</ScrollView>