<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3e454c">

    <RelativeLayout
        android:id="@+id/shake_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/tvcircle_title_color">

        <TextView
            android:id="@+id/shake_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/back"
            android:drawableLeft="@drawable/btn_back_tj"
            android:layout_marginLeft="4dip"
            android:gravity="center_vertical"
            android:textColor="@color/tvcircle_title_text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/shake"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/shake_award_record"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/award_record"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dip"
            android:gravity="center_vertical"
            android:textColor="@color/tvcircle_title_text_color" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/shake_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shake_title_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/icon_pomswing_tj" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shake_tip"
        android:textSize="16sp"
        android:textColor="@color/search_tab_color"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/shake_image"/>

    <TextView
        android:id="@+id/shake_first_surplus_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bdg_timescan_tj"
        android:gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>

</RelativeLayout>