<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bdg_shoppop_tj"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天天圈更新信息"
            android:textColor="@color/tvcircle_grid_item_text_color"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update_version"
            android:textSize="12sp"
            android:textColor="@color/tvcircle_grid_item_text_color"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:background="@color/search_tab_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update_info"
            android:textSize="14sp"
            android:textColor="@color/tvcircle_grid_item_text_color"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/btn_addtopicbtn_tj"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="16dp"
                android:text="@string/update"
                android:textColor="@android:color/white"
                android:id="@+id/update_dialog_ok"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_joinsqbtn_tj"
                android:layout_weight="1.0"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:text="@string/cancel"
                android:id="@+id/update_dialog_cancel"
                android:textColor="@color/tvcircle_grid_item_text_color" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>