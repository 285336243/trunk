<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:paddingLeft="14dip"
    android:paddingRight="14dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:background="@drawable/kk_room_mem_menu_bg"
        android:paddingBottom="25dip" >

        <LinearLayout
            android:id="@+id/middle_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dip"
            android:paddingLeft="14dip"
            android:paddingRight="14dip"
            android:paddingTop="40dip" >

            <LinearLayout
                android:id="@+id/day_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/kk_task_bg_before"
                android:orientation="vertical" >
                
                <TextView
                    android:id="@+id/day_one_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="3dip"
                    android:textColor="@color/kk_background_white"
                    android:textSize="@dimen/kk_text_small_size" />

                <TextView
                    android:id="@+id/day_one_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dip"
                    android:gravity="center_horizontal"
                    android:textColor="@color/kk_background_white"
                    android:textSize="@dimen/kk_text_small_size"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/kk_sign_in_next" />

            <LinearLayout
                android:id="@+id/day_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/kk_task_bg_before"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/day_two_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="3dip"
                    android:textColor="@color/kk_background_white"
                    android:textSize="@dimen/kk_text_small_size" />

                <TextView
                    android:id="@+id/day_two_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dip"
                    android:gravity="center_horizontal"
                    android:textColor="@color/kk_background_white"
                    android:textSize="@dimen/kk_text_small_size"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/kk_sign_in_next" />

            <LinearLayout
                android:id="@+id/day_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/kk_task_bg_before"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/day_three_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="3dip"
                    android:textColor="@color/kk_background_white"
                    android:textSize="@dimen/kk_text_small_size" />

                <TextView
                    android:id="@+id/day_three_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dip"
                    android:gravity="center_horizontal"
                    android:textColor="@color/kk_background_white"
                    android:textSize="@dimen/kk_text_small_size" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/kk_sign_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/middle_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dip"
            android:gravity="center_horizontal"
            android:textColor="@color/kk_text_gray"
            android:textSize="@dimen/kk_text_small_size"
            android:text="@string/kk_task_login_series_tips" >
        </TextView>
        
        <Button
            android:id="@+id/sure_btn"
            android:layout_width="100dip"
            android:layout_height="35dip"
            android:layout_below="@+id/kk_sign_msg_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dip"
            android:textSize="@dimen/kk_text_big_size"
            android:background="@drawable/kk_sign_in_sure_btn"
            android:text="@string/kk_task_must_get"
            android:textColor="@color/kk_background_white" />

        <TextView
            android:id="@+id/kk_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dip"
            android:gravity="center_horizontal"
            android:textColor="@color/kk_text_black"
            android:textSize="@dimen/kk_text_big_size"
            android:text="@string/kk_task_login_series">
        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kk_title_text"
            android:layout_margin="6dip"
            android:src="@drawable/kk_divider_horizontal_timeline" />
    </RelativeLayout>

</RelativeLayout>