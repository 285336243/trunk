<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bdg_tvq_small_tj"
        android:orientation="vertical" 
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dip"
            android:layout_marginTop="8dip" >

            <ImageView
                android:id="@+id/personal_user_pic_list_item_user_avatar"
                android:layout_width="36dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/personal_user_pic_list_item_usre_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/personal_user_pic_list_item_user_avatar"
                android:textColor="#929191"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/personal_user_pic_list_item_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/personal_user_pic_list_item_usre_name"
                android:layout_alignParentBottom="true"
                android:maxEms="14"
                android:layout_marginTop="2dip"
                android:singleLine="true"
                android:textColor="@color/search_tab_selector_color" />

            <TextView
                android:id="@+id/personal_user_pic_list_item_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dip"
                android:textColor="@color/search_tab_color"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="2dip"
                android:layout_toLeftOf="@id/personal_user_pic_list_item_create_time"
                android:background="@drawable/icon_clocktopic_tj" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/personal_user_pic_list_item_content_img_layout"
            android:layout_width="160dip"
            android:layout_height="120dip"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/personal_user_pic_list_item_content_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>