<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <ImageView
            android:id="@+id/topic_details_header_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/topic_details_header_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/search_tab_color"
            android:textSize="16sp"
            android:layout_toRightOf="@id/topic_details_header_avatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/topic_details_header_form"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="@color/search_tab_color" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e3e3" />

    <TextView
        android:id="@+id/topic_details_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/tvcircle_grid_item_text_color"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/topic_details_header_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/tvcircle_grid_item_text_color"
        android:textSize="16sp"/>

    <FrameLayout
        android:id="@+id/topic_details_header_image_layout"
        android:layout_width="160dip"
        android:layout_height="120dip"
        android:layout_marginLeft="8dip"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/topic_details_header_pic_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/topic_details_header_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/search_tab_color"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/topic_details_header_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/search_tab_color"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"/>

        <ImageView
            android:id="@+id/topic_details_header_like_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/topic_details_header_like_count"
            android:background="@drawable/icon_like_topic"/>

        <TextView
            android:id="@+id/topic_details_header_post_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/search_tab_color"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/topic_details_header_like_icon"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="2dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_comment_topic"
            android:layout_toLeftOf="@id/topic_details_header_post_count"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/topic_detail_header_star_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:textSize="12sp"
        android:text="@string/star_post"
        android:textColor="@color/search_tab_color"
        android:shadowColor="#80FFFFFF"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:background="#e8e4e4"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/topic_detail_header_star_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:textSize="12sp"
        android:text="@string/all_post"
        android:textColor="@color/search_tab_color"
        android:shadowColor="#80FFFFFF"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:background="#e8e4e4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e3e3"/>
</LinearLayout>