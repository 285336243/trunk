<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <FrameLayout
        android:id="@+id/home_floor_header_avatar_layout"
        android:layout_width="48dp"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/home_floor_header_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/feb_userhead_choice" />
    </FrameLayout>

    <TextView
        android:id="@+id/home_floor_header_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/home_floor_header_avatar_layout"
        android:ellipsize="end"
        android:maxLength="10"
        android:textColor="@color/light_grey"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/home_floor_header_crown"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/home_floor_header_nickname"
        android:background="@drawable/icon_crown_choice" />

    <TextView
        android:id="@+id/home_floor_header_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_floor_header_nickname"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/home_floor_header_avatar_layout"
        android:textColor="@color/light_grey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/home_floor_header_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_floor_header_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/home_floor_header_avatar_layout"
        android:textColor="@color/grey"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/home_floor_header_content"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_collectingnum_choice" />

        <TextView
            android:id="@+id/home_floor_header_collect_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:layout_marginRight="6dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_commentnum_choice" />

        <TextView
            android:id="@+id/home_floor_header_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:layout_marginRight="6dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_votenum_choice" />

        <TextView
            android:id="@+id/home_floor_header_vote_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>