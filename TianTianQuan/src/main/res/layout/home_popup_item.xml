<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/tvcircle_title_color"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#114d72" />

        <TextView
            android:id="@+id/home_scan_layout"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/btn_scanq_tj"
            android:gravity="center_vertical"
            android:text="@string/home_scann"
            android:textColor="@color/tvcircle_title_text_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#114d72" />

        <TextView
            android:id="@+id/home_shake_layout"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/icon_shake_tj"
            android:gravity="center_vertical"
            android:text="@string/home_shake"
            android:textColor="@color/tvcircle_title_text_color" />
    </LinearLayout>

    <View
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent" />
</LinearLayout>