<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bind_account_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/tvcircle_title_color"
        android:paddingBottom="@dimen/title_padding"
        android:paddingTop="@dimen/title_padding" >

        <LinearLayout
            android:id="@+id/bind_account_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_back_tj"
                android:contentDescription="@string/create_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/back"
                android:textColor="@color/tvcircle_title_text_color" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/bind_account_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="26dip"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/bind_account_setting_photo"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:background="@drawable/bdg_inp_tj" >

                    <ImageView
                        android:id="@+id/bind_account_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:padding="1dp"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/bind_account_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dip"
                    android:layout_marginRight="16dip"
                    android:text="@string/bind_account_desc"
                    android:textColor="@color/search_tab_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/bind_account_mobile"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:background="@drawable/bdg_inp_tj"
                android:drawableLeft="@drawable/icon_email_tj"
                android:hint="@string/email_and_phone"
                android:singleLine="true"
                android:textColorHint="@color/search_tab_color"
                android:textSize="14sp" 
                android:inputType="textEmailAddress"
                android:textColor="@color/tvcircle_grid_item_text_color"/>

            <EditText
                android:id="@+id/bind_account_nick_name"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:background="@drawable/bdg_inp_tj"
                android:drawableLeft="@drawable/icon_username_tj"
                android:hint="@string/nick_name"
                android:singleLine="true"
                android:textColorHint="@color/search_tab_color"
                android:textSize="14sp"
                android:textColor="@color/tvcircle_grid_item_text_color"/>

            <EditText
                android:id="@+id/bind_account_pwd"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:background="@drawable/bdg_inp_tj"
                android:drawableLeft="@drawable/icon_password_tj"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColorHint="@color/search_tab_color"
                android:textSize="14sp"
                android:textColor="@color/tvcircle_grid_item_text_color"/>

            <Button
                android:id="@+id/bind_account_commit"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="16dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:background="@drawable/btn_addtopicbtn_tj"
                android:text="@string/bind_account_commit"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>